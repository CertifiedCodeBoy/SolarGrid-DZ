# SolarGrid DZ — Environment Configuration
# Copy this file to .env and fill in your values

# ─── InfluxDB ────────────────────────────────────────────────────────────
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-super-secret-token
INFLUXDB_ORG=solargrid
INFLUXDB_BUCKET=solar_telemetry

# ─── Kafka ────────────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ─── MQTT (Mosquitto) ────────────────────────────────────────────────────
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TLS=false

# ─── Redis / Celery ───────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── PostgreSQL ───────────────────────────────────────────────────────────
DATABASE_URL=postgresql://solargrid:solargrid-secret@localhost:5432/solargrid

# ─── FastAPI ──────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
API_SECRET_KEY=change-this-in-production

# ─── Weather API (Open-Meteo is free, no key needed) ─────────────────────
# OPENWEATHER_API_KEY=your_key_here  # optional fallback

# ─── Deployment ───────────────────────────────────────────────────────────
ENVIRONMENT=development   # development | staging | production
LOG_LEVEL=INFO
